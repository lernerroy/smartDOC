<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog title="{i18n>/servicesDialogTitle}" busy="{servicesDialogModel>/busy}" stretch="false" contentWidth="450px">
        <endButton>
            <Button text="{i18n>close}" press="onCloseServicesDialogPressed" />
        </endButton>
        <Table items="{servicesDialogModel>/services}" mode="MultiSelect">
            <columns>
                <Column>
                    <Text text="{i18n>status}" />
                </Column>
                <Column>
                    <Text text="{i18n>description}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectStatus text="{path: 'servicesDialogModel>status', formatter: '.formatter.capitalizeText'}" state="{path: 'servicesDialogModel>status', formatter: '.formatter.vendorContratStatusState'}" />
                        <Text text="{servicesDialogModel>description}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Dialog>
</core:FragmentDefinition>
<core:FragmentDefinition xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Popover title="Contract Details" titleAlignment="Start" class="sapUiResponsivePadding" placement="Bottom" contentMinWidth="250px">


        <f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="6" labelSpanL="6" labelSpanM="6" labelSpanS="6" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0">
            <f:content>
                <Label text="{i18n>cpContractId}" />
                <Text text="{contractData>/extenalID}" />
                <Label text="{i18n>cpContractDescrition}" />
                <Text text="{contractData>/description}" />
                <Label text="{i18n>cpCarrierId}" />
                <Text text="{contractData>/carrier_ID}" />

            </f:content>
        </f:SimpleForm>

    </Popover>

</core:FragmentDefinition>